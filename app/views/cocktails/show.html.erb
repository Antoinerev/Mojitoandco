<div class="text-center"><h1>Cocktails#show</h1>
<p>Find me in app/views/cocktails/show.html.erb</p>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h2><%= @cocktail.name %></h2></li>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h4>List of ingredients</h4>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= "#{dose.description } of #{dose.ingredient.name}" %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>
      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail.id), class: "btn btn-primary" %>
    </div>
  </div>

</div>
